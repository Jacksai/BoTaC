<h1>Moje opinie</h1>
<table class="table table-striped">
  <thead>
  <tr>

    <th>Book</th>
    <th>Content</th>
    <th>Grade</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>

  <tbody>
    <% @book_comments.each do |book_comment| %>

      <tr>
        <td><%= link_to book_comment.book.title, book_comment_path(book_comment) %></td>
        <td><%= book_comment.content %></td>
        <td><%= book_comment.grade %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_book_comment_path(book_comment), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      book_comment_path(book_comment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>




